				text-decoration: underline;
			}

			.btn-primary {
				text-decoration: none;
				color: #FFF;
				background-color: #1ab394;
				border: solid #1ab394;
				border-width: 5px 10px;
				line-height: 2;
				font-weight: bold;
				text-align: center;
				cursor: pointer;
				display: inline-block;
				border-radius: 5px;
				text-transform: capitalize;
			}

			/* -------------------------------------
    OTHER STYLES THAT MIGHT BE USEFUL
------------------------------------- */
			.last {
