{% extends 'base.html.twig' %}

{% block title %}Subscription{% endblock %}

{% block body %}
    <h1>Subscription</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscription.id }}</td>
            </tr>
            <tr>
                <th>Calls</th>
                <td>{{ subscription.calls ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>News</th>
                <td>{{ subscription.news ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>New_submission</th>
                <td>{{ subscription.newSubmission ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Announcement</th>
                <td>{{ subscription.announcement ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ subscription.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('subscription_index') }}">back to list</a>

    <a href="{{ path('subscription_edit', {'id': subscription.id}) }}">edit</a>

    {{ include('subscription/_delete_form.html.twig') }}
{% endblock %}
