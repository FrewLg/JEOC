<form method="post" action="{{ path('review_delete', {'id': review.id}) }}" onsubmit="return confirm('Are you sure you want to delete this review comment?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
    <button class="btn btn-soft-danger btn-xs  mt-1">Delete</button>
</form>
