	<div class="col-12">

		<div class="table-responsive">
			<table style="border: 1px solid grey; width:100%;">
					{% if submission.submissionBudgets|length>0 %}
				
				<thead>
					<tr class="bg-gray-dark">
						<th>Expense</th>
						<th>Description</th>
						<th>Unit Price</th>
						<th>Quantity</th>
						<th>Total</th>

					</tr>
				</thead>
				{% endif %}
				<tbody>

					{% set total = 0 %}
					{% for budget in submission.submissionBudgets %}


						<tr>
							<td>{{ budget.category }}</td>


							<td>
								{{ budget.description }}
							</td>

							<td>{{ budget.cost }}</td>
							<td>{{ budget.quantity }}</td>

							<td>
								{{ budget.cost * budget.quantity }}
							</td>
							{% set total = total + (budget.cost * budget.quantity)  %}

						</tr>
						{% else %}

					{% endfor %}
					<tr class="bg-black text-white">
						<td colspan="3" class="border-0"></td>
						<td class="border-0 font-14">
							<b>Total</b>
						</td>
						<td class="border-0 font-14">
							<b>{{ total }}
								ETB</b>
						</td>
					</tr>

				</tbody>
			</table>
		</div>

					 

		<div class="col-12">
			<div class="table-responsive">

					<h5>Time table :
					</h5>

					<table style="border: 1px solid grey; width:100%;">
						<thead>
				{% if submission.researchTimeTables|length >0 %}
							<tr class="bg-gray-dark">
								<th>Task</th>

								<th>Date Start</th>

								<th>Date End</th>
								<th>Remark</th>

							</tr>
						</thead>
				{% endif %}
						<tbody>
							{% for schedule in submission.researchTimeTables %}


								<tr>
									<td>{{ schedule.task }}</td>


									<td>
										{{ schedule.DateStart|date('d M Y ') }}
									</td>

									<td>
										{{ schedule.DateEnd|date('d M Y') }}

									</td>
									<td>{{ schedule.remark }}</td>


								</tr>
								{% else %}

							{% endfor %}


						</tbody>
					</table>
			 

			</div>
			<div class="card-header">
				<div class="row align-items-center">
