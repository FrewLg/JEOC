<h6 style="font-family:arial; text-align:justify;">
	{{ submission.abstract ? submission.abstract |raw: "no executive summary" }}

</h6>

<div class="row">
	<div class="card-body pt-0">
		<hr>
		<h3>Keywords:</h3>


		{% for row in submission.keywords | split(',') %}
			<span class="badge bg-soft-dark px-3 py-2 fw-semibold">{{row}}</span>

		{% else %}
			<span class="badge bg-soft-dark px-3 py-2 fw-semibold">No keywords</span>

		{% endfor %}


		<div class="card-header">
			<div class="row align-items-center">
				<div class="col">
					<h4 class="card-title">Research Outcome</h4>
				</div>

				<p>
					{{ submission.ResearchOutcome ? submission.ResearchOutcome |raw: "No Research Outcome found" }}</p>
			</div>
			<!--end row-->
		</div>

		<div class="card-header">
			<div class="row align-items-center">
				<div class="col">
					<h4 class="card-title">Background and Rationale of Research</h4>
				</div>

				<p>{{ submission.BackgroundAndRationale ? submission.BackgroundAndRationale |raw: "No background found" }}</p>
			</div>
			<!--end row-->
		</div>


		<div class="card-header">
			<div class="row align-items-center">
				<div class="col">
					<h4 class="card-title">Methodology</h4>
				</div>

				{{ submission.methodology ? submission.methodology |raw: "No methodology found" }}
			</div>
			<!--end row-->
		</div>

