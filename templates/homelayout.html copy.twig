<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8">
		<meta content="width=device-width, initial-scale=1.0" name="viewport">

		<title>
			{{ app_name}}
			|
			{%block title%}{%endblock%}
		</title>
		<meta content="" name="description">
		<meta content="" name="keywords">
		<link href="{{ asset('files/site_setting/'~site_logo ) }}" rel="icon">
		<link href="{{ asset('Anyar/assets/img/apple-touch-icon.png') }}" rel="apple-touch-icon">


		<link href="{{ asset('Anyar/assets/vendor/animate.css/animate.min.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/aos/aos.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/boxicons/css/boxicons.min.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/glightbox/css/glightbox.min.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/remixicon/remixicon.css') }}" rel="stylesheet">
		<link href="{{ asset('Anyar/assets/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">

		<link rel="stylesheet" href="{{ asset('adminlte/plugins/fontawesome-free/css/all.min.css') }}">
		<link href="{{ asset('Anyar/assets/css/style.css') }}" rel="stylesheet">
	</head>

	<body>
		<div id="topbar" class="fixed-top d-flex align-items-center topbar-inner-pages">
			<div class="container d-flex align-items-center justify-content-center justify-content-md-between">
				<div class="contact-info d-flex align-items-center">
					<i class="bi bi-envelope-fill"></i>
					<a href="mailto:contact@example.com">research@ju.edu.et</a>
					<i class="bi bi-phone-fill phone-icon"></i>
					+251-471112453
				</div>

				<div class="cta d-none d-md-block"></div>
			</div>

		</div>

		<header id="header" class="fixed-top d-flex align-items-center header-inner-pages" style="background-color:#6f93cd; color:white;">
			<div class="container d-flex align-items-center justify-content-between">
				<a class="home-link" style="color:white" href="{{path('homepage')}}" title="{{app_name}} " rel="home">
					<img id="logo-img" class="img-center" style='width:30px;height:40px; color:white;' src="{{ asset('files/site_setting/'~site_logo ) }}" alt="{{app_name}} ">
					<b>{{app_name}}
					</b>
				</a>
				<nav id="navbar" class="navbar">
					<ul>
						<li>
							<a class="nav-link scrollto " href="{{path('homepage')}}">Home</a>
						</li>
						<li>
							<a href="{{path('call_for_proposal_all')}}" class="nav-link scrollto">Call for proposals</a>

						</li>

						<li class="dropdown">
							<a href="#">
								<span>Opportunities</span>
								<i class="bi bi-chevron-down"></i>
							</a>
							<ul>
								<li><a class=""href="{{path('scholarship_index')}}" class="">Scholarships</a></li>

								<li><a class=""href="{{path('call_for_training')}}" class="">Call For Training</a></li>

							</ul>
						</li>
						{% if is_granted("ROLE_USER")%}

							<li>
								<a class="nav-link scrollto" href="{{ path('myreviews') }}">My research</a>
							</li>


							<li class="dropdown">

								<a href="#">
									<span>

										{% if app.user.userInfo and app.user.userInfo.image %}

											{{  app.user.userInfo}}

											<img src="{{ asset('files/profile_pictures/'~app.user.userInfo.image ) }}" alt="profile-user" class="rounded-circle thumb-xs" style="width:30px;height: 30px;"/>
										{% else %}

											<img src="{{ asset('img/defaultuser.png') }}" alt="profile-user" class="rounded-circle thumb-xs" style="width:30px;height: 30px;"/>

										{% endif %}
									</span>
									<i class="bi bi-chevron-right"></i>
								</a>
								<ul>
									<li><a class=""href="{{path('myreviews')}}">My Research</a></li>
									<li><a class=""href="{{path('researchworks')}}">Profile</a></li>
									<li><a class=""href="{{path('app_logout')}}">Logout<i data-feather="power" class="fa fa-cog"></i></a></li>

								</ul>

							</li>
						{% else %}

							<a href="{{path('app_login')}}" class="btn   btn-outlined btn-primary" style="color:white">
								Login</a>
						{% endif %}
					</ul>

				</nav>

			</div>
		</header>
		<main id="main">
			<section id="breadcrumbs" class="breadcrumbs">
				<div class="container">

					<ol>
						<li>
							<a href="{{path('homepage')}}">Home</a>
						</li>
					</ol>
					<h2>
						{%block pagehead%}
						{%endblock%}
					</h2>
				</div>
			</section>
			<section id="blog" class="blog">
				<div class="container" data-aos="fade-up">

					<div class="row">

						<div class="col-lg-8 entries">
							{% for message in app.flashes('success') %}
								<div class="alert alert-success alert-dismissible fade show border-0 mb-0" role="alert">
									<strong>Success!
									</strong>
									{{ message }}
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							{% endfor %}

							{% for message in app.flashes('danger') %}
								<div class="alert alert-danger alert-dismissible fade show border-0 mb-0" role="alert">
									<strong></strong>
									{{ message }}
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							{% endfor %}
							{% for message in app.flashes('warning') %}
								<div class="alert alert-warning alert-dismissible fade show border-0 mb-0" role="alert">
									<strong>Warning!
									</strong>
									{{ message }}
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							{% endfor %}


							{% for message in app.flashes('danger') %}

								<div class="alert custom-alert custom-alert-danger icon-custom-alert shadow-sm fade show d-flex justify-content-between" role="alert">
									<div class="media">
										<i class="la la-exclamation-triangle alert-icon text-primary align-self-center font-30 me-3"></i>
										<div class="media-body align-self-center">
											<h5 class="mb-1 fw-bold mt-0"></h5>
											<span>{{ message }}
											</span>
										</div>
									</div>
									<button type="button" class="btn-close align-self-center" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>


							{% endfor %}

							<article class="entry">
								{% block body%}
							{% endblock body%}

						</article>
					</div>


					<!-- End blog entries list -->
					<div class="col-lg-4">

						<div class="sidebar"> {% block aside %}{% endblock %}
							{% if is_granted("ROLE_USER")%}
								<aside class="entrytitle">
									<h4 class="widget-title">Guidelines</h4>

									<hr>
									<a href='{{ asset('Guidelines.pdf') }}'>Download proposal submission guideline
										<i data-feather="power" class="fa fa-file-pdf"></i>
									</a>
									<hr>


									<a href='{{ path('user_feedback_new') }}'>Send us a feedback</a>
									<hr>

									<h4 class="widget-title">Researche Directorates</h4>
									<hr>
									<ul class='nav'>
										<li>
											<a href="https://www.ju.edu.et/technology-transfer">Technology Transfer</a>
											<span></span>
										</li>
										<li>
											<a href="https://www.ju.edu.et/university-industry-linkage">University Industry Linkage
											</a>
										</li>
										<li>
											<a href="https://www.ju.edu.et/?q=director-research">Senior research directorate
											</a>
											<span></span>
										</li>
										<li>
											<a href="https://www.ju.edu.et/?q=director-community-services-and-engagement">Community Service</a>
											<span></span>
										</li>

									</ul>
								</aside>


								{% endif%}
							</div>


						</div>
					</div>
				</div>

			</section>
		</main>

		<footer id="footer" style="background-color:#023b6d;" class='m-10'>

			<div class="container">
				<div class="copyright">&copy; Copyright
					<script>
						document.write(new Date().getFullYear())
					</script>
					<strong>
						<span>{{app_name}}</span>
					</strong>. All Rights Reserved
				</div>
				<div class="credits">Designed by<a href="">Jimma University ICT-DO</a>
				</div>
			</div>

		</footer>
		<a href="#" class="back-to-top d-flex align-items-center justify-content-center">
			<i class="bi bi-arrow-up-short"></i>
		</a>
		<script src="{{ asset('Anyar/assets/vendor/aos/aos.js') }}"></script>
		<script src="{{ asset('Anyar/assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
		<script src="{{ asset('Anyar/assets/vendor/glightbox/js/glightbox.min.js') }}"></script>
		<script src="{{ asset('Anyar/assets/vendor/isotope-layout/isotope.pkgd.min.js') }}"></script>
		<script src="{{ asset('Anyar/assets/vendor/php-email-form/validate.js') }}"></script>
		<script src="{{ asset('Anyar/assets/vendor/swiper/swiper-bundle.min.js') }}"></script>
		<script src="{{ asset('Anyar/assets/js/main.js') }}"></script>
	</body>
</body></html>
