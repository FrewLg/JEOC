{% extends 'base.html.twig' %}

{% block title %}Email Message {% endblock %}
{% block container_title %}Email Message {% endblock %}
{% block body %}
 
                     <div class="table-responsive">

                                 <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Email key</th>
                <th>Subject</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for email_message in email_messages %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ email_message.emailKey }}</td>
                <td>{{ email_message.subject |raw}}</td>
                <td>
                    <a href="{{ path('email_message_show', {'id': email_message.id}) }}" class="btn btn-xs btn-soft-info">show</a>
                    <a href="{{ path('email_message_edit', {'id': email_message.id}) }}" class="btn btn-xs btn-soft-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
                {{ knp_pagination_render(email_messages) }}

    <a href="{{ path('email_message_new') }}" class="btn btn-xs btn-soft-success">Create new</a>
{% endblock %}
