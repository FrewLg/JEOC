{% extends 'homelayout.html.twig' %}

{% block title %}Call for proposal{% endblock %}
 
{% block pagehead %}Call For Proposal {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Call For Proposal</li>  {% endblock %} 
{% block body %}
  {% for call_for_proposal in call_for_proposals %}

        <div class="col-lg-8 features-text wow fadeInLeft animated" style="visibility: visible; animation-name: fadeInLeft;">


		<article class=""> 
							 
							<small>
							{{ call_for_proposal.postDate ? call_for_proposal.postDate|date('Y-M-d h:s') : '' }}
							</small> 
							<h6 class="">

								<a href="{{ path('call_for_proposal_show', {'uidentifier': call_for_proposal.uidentifier }) }}">
 
								<p  style="font-family:arial; text-align:justify;">	{{ call_for_proposal.subject|striptags|slice(0, 170)|raw }}</p>
								</a>
							</h6> 
				 
					 
				 </article>

</div>
		{% else %}

			<td colspan="7">No calls made yet</td>

		{% endfor %}
 

                    {% block pagination%}

                   {% endblock %}
                        
                        <div class="pagination-block">
<div class="navigation">
            {{ knp_pagination_render(call_for_proposals) }}
        </div>
                           
                        </div>

{% endblock %}
