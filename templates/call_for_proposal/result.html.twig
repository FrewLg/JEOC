{% extends 'homelayout.html.twig' %}

{% block title %}Call for proposal Result Announcement
{% endblock %}

{% block pagehead %} 

{{ call_for_proposal.heading | raw}} Result Announcement
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item active">Result</li>
{% endblock %}
{% block body %}
<h3>List of Shortlisted proposal.</h3>
<hr>
<ol class="mt-3">
{% for submission in results %}

        <li>
        {% if submission.author == app.user %}
        <a href="{{ path('submission_status',{id:submission.id}) }}">{{ submission.title }}</a>
        {% else %}
            {{ submission.title }}
        {% endif %}
        
       
        </li>
    
{% else %}
    <p class="text-danger">No  result announced yet!</p>
{% endfor %}
<ol>
{% endblock %}
