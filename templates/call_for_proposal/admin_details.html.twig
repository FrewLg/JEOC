{% extends 'base.html.twig' %}

{% block title %}Call for proposal{% endblock %}
 
{% block pagehead %}Call For Proposal {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Call For Proposal</li>  {% endblock %}
