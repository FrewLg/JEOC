       <div class="card">
                     
                                
                        <div class="card-body ">
                                             <div class="social-feed-box p-4"> 
                            <div class="float-right ">

 
 Date:<u> {{ call_for_proposal.postDate ? call_for_proposal.postDate|date('Y-m-d H:i:s') : '' }}</u>
 <br>
                            </div>
                            <div>
                         {% if call_for_proposal.approved=='1'%}
  <a href="{{ path('call_approve_undo', {'id': call_for_proposal.id }) }}
