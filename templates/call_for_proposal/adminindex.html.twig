{% extends 'base.html.twig' %}
{% block title %}Calls
{% endblock %}
{% block container_title %}Calls
{% endblock %}

{% block header_contenttwo %}

	<a href="{{ path('call_for_proposal_new') }}" class='btn btn-primary btn-sm'>
		Make a new call for proposal</a>
{% endblock %}


{% block body %}


	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								All call for papers
							</h4>
							Total: ({{call_for_proposals|length}}) Call for proposal so far
							{%if call_for_proposals|length <=1   %}
								{%else%}s{%endif%}

							</div>
							<!--end col-->
							<div class="col-auto">


								<a href="{{ path('call_for_proposal_new') }}" class='btn btn-primary btn-sm'>
									Make a new call for proposal</a>

							</div>
							<!--end col-->
						</div>


						<!--end row-->
					</div>
					<!--end card-header-->
					<div class="card-body">
						<div class="table-responsive browser_users table-bordered">

							<div class="table-responsive">

								<table class="table table-bordered table-responsive">
									<thead>
										<tr>
											<th>#</th>
											<th>Subject</th>
											<th>Post date</th>
											<th>Deadline</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										{% for call_for_proposal in call_for_proposals %}
											<tr>
												<td>{{ loop.index  }}</td>
												<td>{{ call_for_proposal.subject |raw }}</td>
												<td>
													{{ call_for_proposal.postDate ? call_for_proposal.postDate|date('Y-m-d H:i') : '' }}
												</td>
												<td class='text-center'>
													{{ call_for_proposal.deadline ? call_for_proposal.deadline|date('Y-m-d H:i') : '' }}
												</td> 
												<td nowrap="nowrap">
													<a href="{{ path('call__details', {'id': call_for_proposal.id }) }}" class='btn btn-success btn-xs'>
														Details
													</a>
													<a href="{{ path('call__edit', {'id': call_for_proposal.id}) }}" class="btn btn-xs btn-primary">Edit</a>
													<a href="{{ path('allawarded', {'uidentifier': call_for_proposal.uidentifier}) }}" class='btn btn-primary btn-xs'>Winners</a>
												</td>

											</tr>
										{% else %}
											<tr>
												<td colspan="8">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>

							<div class="navigation">
								{{ knp_pagination_render(call_for_proposals) }}
							</div>

							<!--end table-->
						</div>
						<!--end /div-->
					</div>
					<!--end card-body-->
				</div>
				<!--end card-->
			</div>
		</div>


	{% endblock %}
